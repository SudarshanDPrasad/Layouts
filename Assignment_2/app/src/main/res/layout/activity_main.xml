<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#079527"
        android:drawableLeft="@drawable/ic_vector"
        android:drawableRight="@drawable/ic_vector__4_"
        android:padding="20dp"
        android:paddingRight="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#079527">

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_carbon_play_outline" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#079527" />

        <View
            android:id="@+id/view2"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="35dp"
            android:background="#C4C4C4" />

        <View
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/view2"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:background="#C4C4C4" />

        <View
            android:id="@+id/view4"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@id/view3"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/trynow"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/rectangle"
            android:gravity="center"
            android:text="Try now"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="20dp"
            android:background="#079527"
            android:drawableLeft="@drawable/rectangle"
            android:gravity="center"
            android:text="Install"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/circle1"
            android:layout_marginTop="35dp"
            android:layout_below="@id/trynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/shape" />
        <ImageView
            android:id="@+id/circle2"
            android:layout_marginTop="35dp"
            android:layout_below="@id/trynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/circle1"
            android:layout_marginLeft="30dp"
            android:src="@drawable/shape" />
        <ImageView
            android:id="@+id/circle3"
            android:layout_marginTop="35dp"
            android:layout_below="@id/trynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/circle2"
            android:layout_marginLeft="35dp"
            android:src="@drawable/shape" />


    </RelativeLayout>


    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_marginLeft="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</LinearLayout>